[user]
  name = fugakkbn
  email = aax.chiri@gmail.com
[init]
  defaultBranch = main
[ghq]
  root = ~/projects
[alias]
  ad = add
  ca = commit -am
  cm = commit -m
  cf = commit -v --fixup=HEAD
  cn = commit --amend
  s = switch
  sc = switch -c
  ri = !sh -c 'git rebase -i HEAD~$0'
  rc = rebase --continue
  pl = pull
  pr = pull --rebase
  ps = push
  pf = push --force-with-lease
  st = status
  dsf = "!f() { [ -z \"$GIT_PREFIX\" ] || cd \"$GIT_PREFIX\" && git diff --color \"$@\" | diff-so-fancy  | less --tabs=4 -RFX; }; f"
  lp = log -p
  ll = log --graph --decorate --pretty=oneline --all --abbrev-commit
  ba = branch -a
  bd = branch -d
  bdd = branch -D
  bm = branch -M
  su = stash -u
  sl = stash list
  sp = stash pop
  rs = !sh -c 'git reset HEAD~$0'
[core]
  editor = nvim
